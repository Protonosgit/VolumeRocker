<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/_app_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">
		<androidx.appcompat.widget.Toolbar
			android:id="@+id/_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay" />
	</com.google.android.material.appbar.AppBarLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<ScrollView
			android:id="@+id/scroller"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#000000"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/ground"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:background="#000000"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/frame1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:padding="8dp"
					android:background="#171717"
					android:orientation="vertical">
					<TextView
						android:id="@+id/ti1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Set threshold"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />
					<LinearLayout
						android:id="@+id/ins1"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/te1"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="5dp"
							android:text="Set remote audio threshold"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1" />
						<EditText
							android:id="@+id/edi1"
							android:layout_width="50dp"
							android:layout_height="40dp"
							android:background="@android:color/transparent"
							android:gravity="center_horizontal|center_vertical"
							android:textSize="16sp"
							android:textColor="#0381FE"
							android:hint="Max"
							android:textColorHint="#B0BEC5"
							android:inputType="numberSigned"
							android:imeOptions="actionSend" />
						<ImageView
							android:id="@+id/img1"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_ok"
							android:scaleType="fitCenter" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/frame2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:padding="8dp"
					android:background="#171717"
					android:orientation="vertical">
					<TextView
						android:id="@+id/ti2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Output"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />
					<LinearLayout
						android:id="@+id/ins2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/te2"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="5dp"
							android:text="Divide input by a custom number 1 -&gt; 0.1"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1" />
						<TextView
							android:id="@+id/te3"
							android:layout_width="wrap_content"
							android:layout_height="40dp"
							android:padding="8dp"
							android:text="00"
							android:textSize="16sp"
							android:textColor="#FFFFFF" />
						<ImageView
							android:id="@+id/img2"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:src="@drawable/ic_dropdown"
							android:scaleType="fitCenter" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/frame3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:padding="8dp"
					android:background="#171717"
					android:orientation="vertical">
					<TextView
						android:id="@+id/ti3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Audio"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />
					<LinearLayout
						android:id="@+id/ins3"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:orientation="vertical">
						<Switch
							android:id="@+id/sw1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="15dp"
							android:padding="5dp"
							android:gravity="left|center_vertical"
							android:text="Lock audio to remote signal"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/frame4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:padding="8dp"
					android:background="#171717"
					android:orientation="vertical">
					<TextView
						android:id="@+id/textview5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Connection"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:orientation="vertical">
						<Switch
							android:id="@+id/sw3"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="15dp"
							android:padding="5dp"
							android:gravity="left|center_vertical"
							android:text="Bluetooth service keep alive"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1" />
						<Switch
							android:id="@+id/sw2"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="15dp"
							android:padding="5dp"
							android:gravity="left|center_vertical"
							android:text="Save connection token"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:layout_weight="1" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/frame5"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:padding="8dp"
					android:background="#171717"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Experimental mode"
						android:textSize="18sp"
						android:textColor="#FFFFFF" />
					<TextView
						android:id="@+id/textview4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="right"
						android:text="active"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#69F0AE"
						android:layout_weight="1" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/frame6"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:padding="8dp"
					android:background="#171717"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Reset data"
						android:textSize="18sp"
						android:textColor="#D32F2F" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/frameb"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="60dp"
					android:padding="8dp"
					android:background="#012B4E"
					android:orientation="vertical">
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Information:"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF" />
					<TextView
						android:id="@+id/textview1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="If you need support feep free to visit our website for detailed information about this app.\nWe do NOT store any personal data about you or your device!\nOnly service related data is stored LOCALLY and can be deleted. (Reset button)"
						android:textSize="16sp"
						android:textColor="#0381FE" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
